@model AuctionSpawn.Models.Item
@{
    ViewBag.Title = "Delete Item";
    ViewBag.AuctionID = Model.AuctionID;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Item</title>

</head>
<body>
    <h1>Delete an Item</h1>
    @using (Html.BeginForm())
    {
        <div class="panel panel-default">
            <div class="panel-heading"><h4>Are you really sure you want to delete this auction?</h4></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <span>
                                <label for="txtItemTitle" class="control-label col-md-3">Item Title</label>
                            </span>
                            <div class="input-group">@Model.Title</div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <span>
                                <label for="txtItemDescription" class="control-label col-md-3">Item Description</label>
                            </span>
                            <div class="input-group">@Model.Description</div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <span>
                                <label for="txtItemStartPrice" class="control-label col-md-3">Start Price</label>
                            </span>
                            <div class="input-group">@Model.StartPrice</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-1">
                        <input type="submit" class="btn btn-default customBtn" value="Confirm Delete" /> &nbsp;&nbsp;&nbsp;
                        <button type="button" class="btn btn-default customBtn" onclick="location.href='@Url.Action("ViewAuctionDetails", "Auction", new { id = @ViewBag.AuctionID })'">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        }
    </body>
</html>
